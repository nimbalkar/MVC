<h2>Login</h2>

@using (@Html.BeginForm())
{
    @Html.Label("User Name :");
    @Html.TextBox("uid")
    <br />
    <br />
    @Html.Label("Password :")
    @Html.Password("pwd");
    <br />
    <input type="submit" value="Login" name="sb1" id="sb1" />
}
<br />
<br />

@if (IsPost)
{
    <span style="color:red;">@ViewBag.ErrorMessage</span>
}
